{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {},
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "types",
    "removeComments": true
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
