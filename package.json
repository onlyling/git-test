{
  "name": "git-test",
  "version": "0.2.4",
  "description": "",
  "main": "index.js",
  "scripts": {
    "ncu": "npx npm-check-updates -u",
    "lint": "eslint src --fix --ext .ts",
    "prettier": "prettier --write 'src/**/*.{js,json,yml,yaml,css,scss,less,ts,tsx,md}'",
    "precommit": "lint-staged",
    "commit": "npx git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "changelog:first": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onlyling/git-test.git"
  },
  "author": "LING_ZI_QING <onlylingstudio@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/onlyling/git-test/issues"
  },
  "homepage": "https://github.com/onlyling/git-test#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "commitizen": "^4.2.3",
    "commitlint-config-cz": "^0.13.2",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{yml,yaml,css,scss,less,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,json,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
